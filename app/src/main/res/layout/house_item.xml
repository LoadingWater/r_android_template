<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="5dp"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/estateNumber_hi"
        app:srcCompat="@drawable/ic_map" />

    <TextView
        android:id="@+id/estateNumber_hi"
        android:textAppearance="@style/house_item_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        tools:text="Estate number 123456/5432"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/area_hi"
        android:textAppearance="@style/house_item_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Area 1.00 ha"
        app:layout_constraintStart_toStartOf="@+id/estateNumber_hi"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/land_hi"
        android:textAppearance="@style/house_item_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        tools:text="Nordrhein-Westfale"
        app:layout_constraintStart_toEndOf="@+id/estateNumber_hi"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/district_hi"
        android:textAppearance="@style/house_item_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/area_hi"
        app:layout_constraintStart_toStartOf="@+id/land_hi"
        tools:text="Wertheim" />
</androidx.constraintlayout.widget.ConstraintLayout>