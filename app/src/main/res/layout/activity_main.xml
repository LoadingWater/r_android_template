<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_am"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/showEstate_am"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:itemCount="10"
        tools:listitem="@layout/house_item" />

    <Button
        android:id="@+id/showEstate_am"
        style="@style/custom_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/show_estate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/changeLocale_am"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/changeLocale_am"
        style="@style/custom_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/change_locale"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/showEstate_am" />

</androidx.constraintlayout.widget.ConstraintLayout>